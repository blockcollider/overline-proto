{
  "git": {
    "commitMessage": "Version v${version}",
    "tagAnnotation": "Version v${version}",
    "requireCleanWorkingDir": true,
    "requireCommits": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "VERSION",
      "out": "VERSION"
    },
    "@release-it/keep-a-changelog": {
      "filename": "CHANGELOG.md"
    }
  }
}
